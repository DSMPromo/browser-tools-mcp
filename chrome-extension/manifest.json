{
  "manifest_version": 2,
  "name": "Browser Tools MCP",
  "version": "1.0",
  "description": "Chrome extension for Browser Tools MCP",
  "permissions": [
    "tabs",
    "activeTab",
    "webNavigation",
    "webRequest",
    "*://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "devtools_page": "devtools.html"
}